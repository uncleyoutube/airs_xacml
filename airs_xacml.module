/**
 * Creates a new XACML object and sets user and admin
 *  to view and manage it
 *
 * Does not write it back to Fedora
 * 
 * @param $object
 *   The object that the policy will apply to
 */
function airs_xacml_policy_creation($object) {
  $xacml = new IslandoraXacml($object);
  $xacml->viewingRule->addUser(array($user->name, 'admin'));
  $xacml->managementRule->addUser(array($user->name, 'admin'));
  return $xacml;
}

